{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "moduleResolution": "node"
